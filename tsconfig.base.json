{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2022",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "importHelpers": true,
    "paths": {
      "@apollo/constants": ["libs/constants/src/index.ts"],
      "@apollo/features": ["features/src/index.ts"],
      "@apollo/ui": ["libs/ui/src/index.ts"],
      "@apollo/ui/*": ["libs/ui/src/lib/ui/*"],
      "@apollo/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
